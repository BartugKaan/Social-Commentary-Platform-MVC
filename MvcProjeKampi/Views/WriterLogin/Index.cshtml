@using EntityLayer.Concrete
@model Writer
@{
    Layout = null;
}

<!doctype html>
<html lang="en">
<head>
    <title>Yazar Giriþ</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/AdminLTE-3.0.4/login-form-19/css/style.css">

</head>
<body>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 text-center mb-5">
                    <h2 class="heading-section">MVC Proje Kampý Yazar Giriþi</h2>
                </div>
            </div>
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap py-5">
                        <div class="img d-flex align-items-center justify-content-center" style="background-image: url(/AdminLTE-3.0.4/login-form-19/images/bg.jpg);"></div>
                        <h3 class="text-center mb-0">Hoþ Geldiniz</h3>
                        <p class="text-center">Yazar paneline eriþmek için bilgilerinizi giriniz.</p>
                        
                        <!-- Success Message -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success text-center mb-3">@TempData["SuccessMessage"]</div>
                        }
                        
                        <!-- Error Message -->
                        @if (ViewBag.ErrorMessage != null)
                        {
                            <div class="alert alert-danger text-center mb-3">@ViewBag.ErrorMessage</div>
                        }
                        
                        @using (Html.BeginForm("Index", "WriterLogin", FormMethod.Post))
                        {
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-envelope"></span></div>
                                @{
                                    string emailValue = "";
                                    if (TempData["RegisteredEmail"] != null)
                                    {
                                        emailValue = TempData["RegisteredEmail"].ToString();
                                    }
                                    else if (ViewBag.WriterMail != null)
                                    {
                                        emailValue = ViewBag.WriterMail.ToString();
                                    }
                                }
                                <input type="email" class="form-control" name="WriterMail" placeholder="E-posta Adresiniz" required value="@emailValue">
                            </div>
                            <div class="form-group">
                                <div class="icon d-flex align-items-center justify-content-center"><span class="fa fa-lock"></span></div>
                                <input type="password" class="form-control" name="WriterPassword" placeholder="Þifreniz" required>
                            </div>
                            
                            <div class="form-group">
                                <button type="submit" class="btn form-control btn-primary rounded submit px-3">Giriþ Yap</button>
                            </div>
                            <div class="form-group text-center">
                                <p class="w-100">
                                    <a href="@Url.Action("Register", "WriterLogin")" style="color: #007bff; text-decoration: none;">Hesabýnýz yok mu? Kayýt olun</a>
                                </p>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/AdminLTE-3.0.4/login-form-19/js/jquery.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/popper.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/bootstrap.min.js"></script>
    <script src="~/AdminLTE-3.0.4/login-form-19/js/main.js"></script>

</body>
</html>