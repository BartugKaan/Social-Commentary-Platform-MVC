@using EntityLayer.Concrete
@model MvcProjeKampi.Controllers.VitrinViewModel
@{
    ViewBag.Title = "Ana Sayfa";
    Layout = "~/Views/Shared/_VitrinLayout.cshtml";
}

<div class="row mt-4">
    <!-- Main Content Area -->
    <div class="col-lg-8">
        @if (Model.Contents != null && Model.Contents.Any())
        {
            <div class="row">
                @foreach (var content in Model.Contents)
                {
                    <div class="col-md-12 mb-4">
                        <div class="card article-card h-100">
                            <div class="card-body">
                                <div class="row">
                                    <div class="col-12">
                                        <div class="d-flex justify-content-between align-items-start mb-3">
                                            <span class="badge badge-primary">@content.Heading.Category.CategoryName</span>
                                            <small class="text-muted">@content.ContentDate.ToString("dd MMM yyyy")</small>
                                        </div>
                                        
                                        <h5 class="card-title">
                                            <a href="@Url.Action("HeadingContents", "Vitrin", new { id = content.HeadingId })" 
                                               class="text-decoration-none text-dark">
                                                @content.Heading.HeadingName
                                            </a>
                                        </h5>
                                        
                                        <p class="card-text">
                                            @Html.Raw(content.ContentValue.Length > 200 
                                                ? content.ContentValue.Substring(0, 200) + "..." 
                                                : content.ContentValue)
                                        </p>
                                        
                                        <div class="d-flex justify-content-between align-items-center">
                                            <div class="author-info">
                                                <i class="fas fa-user text-muted mr-1"></i>
                                                <small class="text-muted">@content.Writer.WriterName @content.Writer.WriterSurname</small>
                                            </div>
                                            
                                            <a href="@Url.Action("ArticleDetail", "Vitrin", new { id = content.ContentId })" 
                                               class="btn btn-outline-primary btn-sm">
                                                <i class="fas fa-arrow-right mr-1"></i>Devamýný Oku
                                            </a>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        }
        else
        {
            <div class="card">
                <div class="card-body text-center py-5">
                    <i class="fas fa-file-alt fa-4x text-muted mb-3"></i>
                    <h4 class="text-muted">Henüz Ýçerik Yok</h4>
                    <p class="text-muted">Þu anda görüntülenecek içerik bulunmuyor.</p>
                </div>
            </div>
        }
    </div>

    <!-- Sidebar -->
    <div class="col-lg-4">
        <!-- Recent Headings -->
        <div class="card shadow-sm">
            <div class="card-header bg-primary text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-list mr-2"></i>Son Baþlýklar
                </h5>
            </div>
            <div class="card-body p-0">
                @if (Model.RecentHeadings != null && Model.RecentHeadings.Any())
                {
                    <div class="list-group list-group-flush">
                        @foreach (var heading in Model.RecentHeadings)
                        {
                            <a href="@Url.Action("HeadingContents", "Vitrin", new { id = heading.HeadingId })" 
                               class="list-group-item list-group-item-action sidebar-heading border-0">
                                <div class="d-flex w-100 justify-content-between">
                                    <h6 class="mb-1 text-truncate">@heading.HeadingName</h6>
                                    <small class="text-muted">@heading.HeadingDate.ToString("dd MMM")</small>
                                </div>
                                <div class="d-flex w-100 justify-content-between">
                                    <small class="text-muted">@heading.Category.CategoryName</small>
                                    <small class="text-primary">@heading.Writer.WriterName @heading.Writer.WriterSurname</small>
                                </div>
                            </a>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center py-4">
                        <i class="fas fa-list fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">Henüz baþlýk yok</p>
                    </div>
                }
            </div>
        </div>

        <!-- Categories -->
        <div class="card shadow-sm mt-4">
            <div class="card-header bg-success text-white">
                <h5 class="card-title mb-0">
                    <i class="fas fa-tags mr-2"></i>Kategoriler
                </h5>
            </div>
            <div class="card-body">
                @if (Model.Categories != null && Model.Categories.Any())
                {
                    <div class="d-flex flex-wrap">
                        @foreach (var category in Model.Categories)
                        {
                            <span class="badge badge-outline-success mr-2 mb-2 p-2">
                                <i class="fas fa-tag mr-1"></i>@category.CategoryName
                            </span>
                        }
                    </div>
                }
                else
                {
                    <div class="text-center">
                        <i class="fas fa-tags fa-2x text-muted mb-2"></i>
                        <p class="text-muted mb-0">Henüz kategori yok</p>
                    </div>
                }
            </div>
        </div>

        <!-- Writer Login Card -->
        <div class="mt-4">
            @Html.Partial("_WriterLoginCard")
        </div>
    </div>
</div>

@section Scripts {
<script>
$(document).ready(function() {
    // Article card hover effects
    $('.article-card').hover(
        function() {
            $(this).addClass('shadow-lg');
        },
        function() {
            $(this).removeClass('shadow-lg');
        }
    );
    
    // Animate cards on load
    $('.article-card').each(function(index) {
        $(this).css('opacity', '0').delay(index * 100).animate({'opacity': '1'}, 500);
    });
    
    // Smooth animations for sidebar items
    $('.sidebar-heading').hover(
        function() {
            $(this).css('transform', 'translateX(10px)');
        },
        function() {
            $(this).css('transform', 'translateX(0px)');
        }
    );
});
</script>
}