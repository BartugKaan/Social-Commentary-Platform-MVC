@using EntityLayer.Concrete
@model Message
@{
    ViewBag.Title = "GetMessageDetails";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Mesaj Detayý</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/WriterPanel/Messages">Mesajlar</a></li>
                    <li class="breadcrumb-item active">Mesaj Detayý</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-3">
                <a href="/WriterPanel/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluþtur</a>
                
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Klasörler</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a href="/WriterPanel/Inbox" class="nav-link">
                                    <i class="fas fa-inbox"></i> Gelen Kutusu
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/WriterPanel/Sendbox" class="nav-link">
                                    <i class="far fa-envelope"></i> Gönderilenler
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/WriterPanel/Messages" class="nav-link">
                                    <i class="fas fa-home"></i> Ana Sayfa
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Mesajý Oku</h3>
                        <div class="card-tools">
                            <div class="btn-group">
                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Yanýtla">
                                    <i class="fas fa-reply"></i>
                                </button>
                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Ýlet">
                                    <i class="fas fa-share"></i>
                                </button>
                                <button type="button" class="btn btn-default btn-sm" data-toggle="tooltip" title="Yazdýr">
                                    <i class="fas fa-print"></i>
                                </button>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-0">
                        <div class="mailbox-read-info">
                            <h5>@Model.Subject</h5>
                            <h6>
                                @{
                                    string currentWriterEmail = (string)Session["WriterMail"];
                                    bool isIncoming = Model.ReceiverMail == currentWriterEmail;
                                }
                                
                                @if (isIncoming)
                                {
                                    <span>Gönderen: <span class="text-primary">@Model.SenderMail</span></span>
                                }
                                else
                                {
                                    <span>Alýcý: <span class="text-success">@Model.ReceiverMail</span></span>
                                }
                                
                                <span class="mailbox-read-time float-right">
                                    <i class="far fa-clock"></i> @Model.MessageDate.ToString("dd MMMM yyyy, HH:mm")
                                </span>
                            </h6>
                        </div>
                        
                        <div class="mailbox-read-message">
                            @Html.Raw(Model.MessageContent)
                        </div>
                    </div>
                    
                    <div class="card-footer">
                        <div class="float-right">
                            @if (isIncoming)
                            {
                                <a href="/WriterPanel/NewMessage" class="btn btn-primary">
                                    <i class="fas fa-reply"></i> Yanýtla
                                </a>
                            }
                            <a href="/WriterPanel/Messages" class="btn btn-default">
                                <i class="fas fa-arrow-left"></i> Geri Dön
                            </a>
                        </div>
                        
                        <div class="float-left">
                            @if (isIncoming)
                            {
                                <a href="/WriterPanel/Inbox" class="btn btn-secondary">
                                    <i class="fas fa-inbox"></i> Gelen Kutusu
                                </a>
                            }
                            else
                            {
                                <a href="/WriterPanel/Sendbox" class="btn btn-secondary">
                                    <i class="far fa-envelope"></i> Gönderilenler
                                </a>
                            }
                        </div>
                        <div class="clearfix"></div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>