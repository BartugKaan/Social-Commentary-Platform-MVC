@using EntityLayer.Concrete
@model Heading
@{
    ViewBag.Title = "EditHeading";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Baþlýðý Düzenle</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/WriterPanel/WriterHeading">Baþlýklarým</a></li>
                    <li class="breadcrumb-item active">Düzenle</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8 mx-auto">
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Baþlýk Bilgilerini Düzenle</h3>
                    </div>
                    
                    @if (ViewBag.ErrorMessage != null)
                    {
                        <div class="alert alert-danger mx-3 mt-3">
                            @ViewBag.ErrorMessage
                        </div>
                    }
                    
                    @using (Html.BeginForm("EditHeading", "WriterPanel", FormMethod.Post, new { @class = "form-horizontal" }))
                    {
                        @Html.HiddenFor(model => model.HeadingId)
                        
                        <div class="card-body">
                            <div class="form-group row">
                                <label for="HeadingName" class="col-sm-3 col-form-label">Baþlýk Adý <span class="text-danger">*</span></label>
                                <div class="col-sm-9">
                                    @Html.TextBoxFor(model => model.HeadingName, new { @class = "form-control", placeholder = "Baþlýk adýný giriniz", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.HeadingName, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label for="CategoryId" class="col-sm-3 col-form-label">Kategori <span class="text-danger">*</span></label>
                                <div class="col-sm-9">
                                    @Html.DropDownListFor(model => model.CategoryId, (SelectList)ViewBag.CategoryId, "-- Kategori Seçiniz --", new { @class = "form-control", @required = "required" })
                                    @Html.ValidationMessageFor(model => model.CategoryId, "", new { @class = "text-danger small" })
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <div class="col-sm-9 offset-sm-3">
                                    <div class="form-check">
                                        @Html.CheckBoxFor(model => model.HeadingStatus, new { @class = "form-check-input" })
                                        @Html.LabelFor(model => model.HeadingStatus, "Aktif durumda tut", new { @class = "form-check-label" })
                                    </div>
                                </div>
                            </div>
                            
                            <div class="form-group row">
                                <label class="col-sm-3 col-form-label">Oluþturma Tarihi</label>
                                <div class="col-sm-9">
                                    <p class="form-control-plaintext">
                                        <i class="far fa-calendar-alt"></i> @Model.HeadingDate.ToString("dd MMMM yyyy, HH:mm")
                                    </p>
                                </div>
                            </div>
                        </div>
                        
                        <div class="card-footer">
                            <div class="row">
                                <div class="col-sm-9 offset-sm-3">
                                    <button type="submit" class="btn btn-primary">
                                        <i class="fas fa-save"></i> Deðiþiklikleri Kaydet
                                    </button>
                                    <a href="/WriterPanel/WriterHeading" class="btn btn-secondary ml-2">
                                        <i class="fas fa-times"></i> Ýptal
                                    </a>
                                    <a href="/WriterPanel/ContentByHeading/@Model.HeadingId" class="btn btn-info ml-2">
                                        <i class="fas fa-eye"></i> Ýçerikleri Görüntüle
                                    </a>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>