@using EntityLayer.Concrete
@model Writer
@{
    ViewBag.Title = "WriterProfile";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Profilim</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-4">
                <!-- Profile Image -->
                <div class="card card-primary card-outline">
                    <div class="card-body box-profile">
                        <div class="text-center">
                            <img class="profile-user-img img-fluid img-circle"
                                 src="@Model.WriterImage"
                                 alt="Yazar profil resmi" 
                                 style="width: 150px; height: 150px; object-fit: cover;">
                        </div>

                        <h3 class="profile-username text-center">@Model.WriterName @Model.WriterSurname</h3>

                        <p class="text-muted text-center">@Model.WriterTitle</p>

                        <ul class="list-group list-group-unbordered mb-3">
                            <li class="list-group-item">
                                <b>E-posta</b> <span class="float-right">@Model.WriterMail</span>
                            </li>
                            <li class="list-group-item">
                                <b>Durum</b> 
                                <span class="float-right">
                                    @if (Model.WriterStatus)
                                    {
                                        <span class="badge badge-success">Aktif</span>
                                    }
                                    else
                                    {
                                        <span class="badge badge-danger">Pasif</span>
                                    }
                                </span>
                            </li>
                        </ul>

                        <a href="/WriterPanel/EditProfile" class="btn btn-primary btn-block"><b>Profili Düzenle</b></a>
                    </div>
                </div>

                <!-- About Me Box -->
                <div class="card card-primary">
                    <div class="card-header">
                        <h3 class="card-title">Hakkımda</h3>
                    </div>
                    <div class="card-body">
                        <strong><i class="fas fa-pencil-alt mr-1"></i> Açıklama</strong>
                        <p class="text-muted">@Model.WriterAbout</p>
                    </div>
                </div>
            </div>

            <div class="col-md-8">
                <div class="card">
                    <div class="card-header p-2">
                        <ul class="nav nav-pills">
                            <li class="nav-item"><a class="nav-link active" href="#overview" data-toggle="tab">Genel Bakış</a></li>
                            <li class="nav-item"><a class="nav-link" href="#timeline" data-toggle="tab">Son Aktiviteler</a></li>
                        </ul>
                    </div>
                    <div class="card-body">
                        <div class="tab-content">
                            <div class="active tab-pane" id="overview">
                                <div class="row">
                                    <div class="col-12 col-sm-4">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Toplam Başlık</span>
                                                <span class="info-box-number text-center text-muted mb-0">@ViewBag.HeadingCount</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-4">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Toplam İçerik</span>
                                                <span class="info-box-number text-center text-muted mb-0">@ViewBag.ContentCount</span>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="col-12 col-sm-4">
                                        <div class="info-box bg-light">
                                            <div class="info-box-content">
                                                <span class="info-box-text text-center text-muted">Hesap Durumu</span>
                                                <span class="info-box-number text-center text-muted mb-0">
                                                    @if (Model.WriterStatus)
                                                    {
                                                        <span class="badge badge-success">Aktif</span>
                                                    }
                                                    else
                                                    {
                                                        <span class="badge badge-danger">Pasif</span>
                                                    }
                                                </span>
                                            </div>
                                        </div>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-12">
                                        <h4>Hızlı Erişim</h4>
                                        <div class="row">
                                            <div class="col-md-6">
                                                <a href="/WriterPanel/WriterHeading" class="btn btn-primary btn-block">
                                                    <i class="fas fa-th"></i> Başlıklarım
                                                </a>
                                            </div>
                                            <div class="col-md-6">
                                                <a href="/WriterPanel/MyContents" class="btn btn-info btn-block">
                                                    <i class="fas fa-book"></i> Yazılarım
                                                </a>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </div>

                            <div class="tab-pane" id="timeline">
                                <div class="timeline timeline-inverse">
                                    <div class="time-label">
                                        <span class="bg-success">Son Aktiviteler</span>
                                    </div>
                                    <div>
                                        <i class="fas fa-user bg-info"></i>
                                        <div class="timeline-item">
                                            <h3 class="timeline-header border-0">
                                                Profil sayfası ziyaret edildi
                                            </h3>
                                        </div>
                                    </div>
                                    <div>
                                        <i class="far fa-clock bg-gray"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

