@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "Inbox";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Gelen Kutusu</h1>
            </div>
            <div class="col-sm-6">
                <ol class="breadcrumb float-sm-right">
                    <li class="breadcrumb-item"><a href="/WriterPanel/Messages">Mesajlar</a></li>
                    <li class="breadcrumb-item active">Gelen Kutusu</li>
                </ol>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="row">
        <div class="col-md-3">
            <a href="/WriterPanel/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluþtur</a>

            <div class="card">
                <div class="card-header">
                    <h3 class="card-title">Klasörler</h3>
                    <div class="card-tools">
                        <button type="button" class="btn btn-tool" data-card-widget="collapse">
                            <i class="fas fa-minus"></i>
                        </button>
                    </div>
                </div>
                <div class="card-body p-0">
                    <ul class="nav nav-pills flex-column">
                        <li class="nav-item">
                            <a href="/WriterPanel/Inbox" class="nav-link active">
                                <i class="fas fa-inbox"></i> Gelen Kutusu
                                <span class="badge bg-primary float-right">@Model.Count</span>
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanel/Sendbox" class="nav-link">
                                <i class="far fa-envelope"></i> Gönderilenler
                            </a>
                        </li>
                        <li class="nav-item">
                            <a href="/WriterPanel/Messages" class="nav-link">
                                <i class="fas fa-home"></i> Ana Sayfa
                            </a>
                        </li>
                    </ul>
                </div>
            </div>
        </div>

        <div class="col-md-9">
            <div class="card card-primary card-outline">
                <div class="card-header">
                    <h3 class="card-title">Gelen Mesajlar</h3>
                    <div class="card-tools">
                        <div class="input-group input-group-sm">
                            <input type="text" class="form-control" placeholder="Mesajlarda ara...">
                            <div class="input-group-append">
                                <div class="btn btn-primary">
                                    <i class="fas fa-search"></i>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="card-body p-0">
                    @if (Model != null && Model.Count > 0)
                    {
                        <div class="table-responsive mailbox-messages">
                            <table class="table table-hover table-striped">
                                <tbody>
                                    @foreach (var message in Model)
                                    {
                                        <tr>
                                            <td>
                                                <div class="icheck-primary">
                                                    <input type="checkbox" value="" id="check@(message.MessageId)">
                                                    <label for="check@(message.MessageId)"></label>
                                                </div>
                                            </td>
                                            <td class="mailbox-name">
                                                <a href="/WriterPanel/GetMessageDetails/@message.MessageId">
                                                    <strong>@message.SenderMail</strong>
                                                </a>
                                            </td>
                                            <td class="mailbox-subject">
                                                <b>@message.Subject</b> -
                                                @if (message.MessageContent != null && message.MessageContent.Length > 50)
                                                {
                                                    @Html.Raw(message.MessageContent.Substring(0, 50) + "...")
                                                }
                                                else
                                                {
                                                    @Html.Raw(message.MessageContent ?? "")
                                                }
                                            </td>
                                            <td class="mailbox-attachment">
                                                <i class="fas fa-paperclip" style="visibility: hidden;"></i>
                                            </td>
                                            <td class="mailbox-date">
                                                @{
                                                    var timeSpan = DateTime.Now - message.MessageDate;
                                                    string timeText = "";
                                                    if (timeSpan.Days > 0)
                                                    {
                                                        timeText = timeSpan.Days + " gün önce";
                                                    }

                                                    else if (timeSpan.Hours > 0)
                                                    {
                                                        timeText = timeSpan.Hours + " saat önce";
                                                    }

                                                    else if (timeSpan.Minutes > 0)
                                                    {
                                                        timeText = timeSpan.Minutes + " dk önce";
                                                    }

                                                    else
                                                    {
                                                        timeText = "Az önce";
                                                    }
                                                }
                                                @timeText
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-5">
                            <div class="mb-3">
                                <i class="fas fa-inbox fa-4x text-muted"></i>
                            </div>
                            <h4 class="text-muted">Gelen kutunuz boþ</h4>
                            <p class="text-muted">Henüz size mesaj gönderen kimse yok.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>