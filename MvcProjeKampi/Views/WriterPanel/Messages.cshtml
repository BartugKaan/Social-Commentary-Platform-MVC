@using EntityLayer.Concrete
@model List<Message>
@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Mesajlar</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        @if (TempData["SuccessMessage"] != null)
        {
            <div class="alert alert-success alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-check"></i> @TempData["SuccessMessage"]
            </div>
        }
        
        @if (TempData["ErrorMessage"] != null)
        {
            <div class="alert alert-danger alert-dismissible">
                <button type="button" class="close" data-dismiss="alert" aria-hidden="true">&times;</button>
                <i class="icon fas fa-ban"></i> @TempData["ErrorMessage"]
            </div>
        }
        
        <div class="row">
            <div class="col-md-3">
                <a href="/WriterPanel/NewMessage" class="btn btn-primary btn-block mb-3">Yeni Mesaj Oluþtur</a>
                
                <div class="card">
                    <div class="card-header">
                        <h3 class="card-title">Mesaj Klasörleri</h3>
                        <div class="card-tools">
                            <button type="button" class="btn btn-tool" data-card-widget="collapse">
                                <i class="fas fa-minus"></i>
                            </button>
                        </div>
                    </div>
                    <div class="card-body p-0">
                        <ul class="nav nav-pills flex-column">
                            <li class="nav-item">
                                <a href="/WriterPanel/Inbox" class="nav-link">
                                    <i class="fas fa-inbox"></i> Gelen Kutusu
                                    <span class="badge bg-primary float-right">@ViewBag.InboxCount</span>
                                </a>
                            </li>
                            <li class="nav-item">
                                <a href="/WriterPanel/Sendbox" class="nav-link">
                                    <i class="far fa-envelope"></i> Gönderilenler
                                    <span class="badge bg-info float-right">@ViewBag.SendboxCount</span>
                                </a>
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
            
            <div class="col-md-9">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title">Son Gelen Mesajlar</h3>
                        <div class="card-tools">
                            <div class="input-group input-group-sm">
                                <input type="text" class="form-control" placeholder="Mesajlarda ara...">
                                <div class="input-group-append">
                                    <div class="btn btn-primary">
                                        <i class="fas fa-search"></i>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="card-body p-0">
                        @if (Model != null && Model.Count > 0)
                        {
                            <div class="table-responsive mailbox-messages">
                                <table class="table table-hover table-striped">
                                    <tbody>
                                        @foreach (var message in Model.Take(10))
                                        {
                                            <tr>
                                                <td class="mailbox-name">
                                                    <a href="/WriterPanel/GetMessageDetails/@message.MessageId">
                                                        <strong>@message.SenderMail</strong>
                                                    </a>
                                                </td>
                                                <td class="mailbox-subject">
                                                    <b>@message.Subject</b> - 
                                                    @if (message.MessageContent != null && message.MessageContent.Length > 50)
                                                    {
                                                        @Html.Raw(message.MessageContent.Substring(0, 50) + "...")
                                                    }
                                                    else
                                                    {
                                                        @Html.Raw(message.MessageContent ?? "")
                                                    }
                                                </td>
                                                <td class="mailbox-date">
                                                    @message.MessageDate.ToString("dd.MM.yyyy HH:mm")
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        }
                        else
                        {
                            <div class="text-center py-5">
                                <div class="mb-3">
                                    <i class="fas fa-envelope fa-4x text-muted"></i>
                                </div>
                                <h4 class="text-muted">Henüz mesajýnýz bulunmuyor</h4>
                                <p class="text-muted mb-4">Diðer yazarlarla iletiþim kurmak için yeni bir mesaj oluþturun.</p>
                                <a href="/WriterPanel/NewMessage" class="btn btn-primary">
                                    <i class="fas fa-plus"></i> Ýlk Mesajýnýzý Oluþturun
                                </a>
                            </div>
                        }
                    </div>
                    
                    @if (Model != null && Model.Count > 10)
                    {
                        <div class="card-footer text-center">
                            <a href="/WriterPanel/Inbox" class="btn btn-primary">
                                Tüm Gelen Mesajlarý Görüntüle
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</section>