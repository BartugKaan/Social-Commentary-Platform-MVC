@using EntityLayer.Concrete
@model List<Content>
@{
    ViewBag.Title = "MyContents";
    Layout = "~/Views/Shared/_WriterLayout.cshtml";
}

@{
    string GetContentStatusBadge(bool status)
    {
        return status ? "badge-success" : "badge-danger";
    }
    
    string GetContentStatusText(bool status)
    {
        return status ? "Aktif" : "Pasif";
    }
}

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Yazýlarým</h1>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="card">
        <div class="card-header">
            <div class="row">
                <div class="col-8">
                    <h3 class="card-title">Tüm Yazýlarým</h3>
                </div>
                <div class="col-4 text-right">
                    <a class="btn btn-success" href="/WriterPanel/WriterHeading">
                        <i class="fas fa-plus"></i> Yeni Ýçerik Ýçin Baþlýk Ekle
                    </a>
                </div>
            </div>
        </div>
        
        <div class="card-body p-0">
            @if (Model != null && Model.Count > 0)
            {
                <table class="table table-striped">
                    <thead>
                        <tr>
                            <th style="width: 5%">#</th>
                            <th style="width: 30%">Baþlýk</th>
                            <th style="width: 40%">Ýçerik Özeti</th>
                            <th style="width: 10%">Durum</th>
                            <th style="width: 15%">Tarih</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var content in Model)
                        {
                            <tr>
                                <td>@content.ContentId</td>
                                <td>
                                    <strong>@content.Heading.HeadingName</strong>
                                    <br />
                                    <small class="text-muted">
                                        <i class="fas fa-tag"></i> @content.Heading.Category.CategoryName
                                    </small>
                                </td>
                                <td>
                                    <div style="max-height: 80px; overflow: hidden;">
                                        @if (content.ContentValue != null && content.ContentValue.Length > 150)
                                        {
                                            @Html.Raw(content.ContentValue.Substring(0, 150) + "...")
                                        }
                                        else
                                        {
                                            @Html.Raw(content.ContentValue ?? "Ýçerik bulunamadý")
                                        }
                                    </div>
                                </td>
                                <td>
                                    <span class="badge @GetContentStatusBadge(content.ContentStatus)">
                                        @GetContentStatusText(content.ContentStatus)
                                    </span>
                                </td>
                                <td>
                                    <small>
                                        <i class="far fa-calendar-alt"></i>
                                        @content.ContentDate.ToString("dd.MM.yyyy")
                                        <br />
                                        <i class="far fa-clock"></i>
                                        @content.ContentDate.ToString("HH:mm")
                                    </small>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            }
            else
            {
                <div class="text-center py-5">
                    <div class="mb-3">
                        <i class="fas fa-book fa-4x text-muted"></i>
                    </div>
                    <h4 class="text-muted">Henüz yazýnýz bulunmuyor</h4>
                    <p class="text-muted mb-4">Yeni bir yazý yazmak için önce baþlýk oluþturmanýz gerekiyor.</p>
                    <a href="/WriterPanel/WriterHeading" class="btn btn-primary">
                        <i class="fas fa-plus"></i> Ýlk Baþlýðýnýzý Oluþturun
                    </a>
                </div>
            }
        </div>
        
        @if (Model != null && Model.Count > 0)
        {
            <div class="card-footer">
                <div class="row">
                    <div class="col-sm-12">
                        <div class="float-right">
                            <span class="text-muted">
                                Toplam <strong>@Model.Count</strong> yazýnýz bulunmaktadýr.
                            </span>
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</section>