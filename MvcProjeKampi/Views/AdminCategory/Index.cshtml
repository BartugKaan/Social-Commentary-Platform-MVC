@using EntityLayer.Concrete
@model List<Category>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h3 class="p-3">Kategoriler</h3>
<br />
<div class="container">
    <table class="table table-bordered ">
        <tr>
            <th>#</th>
            <th>Adı</th>
            <th>Açıklama</th>
            <th>Durum</th>
            <th>Başlıklar</th>
            <th>Aksiyonlar</th>
        </tr>
        @foreach (var category in Model)
        {
            <tr>
                <th>@category.CategoryId</th>
                <td>@category.CategoryName</td>
                <td>@category.CategoryDescription</td>
                <td>@category.CategoryStatus</td>
                <td><a class="btn btn-primary">Başlıklar</a></td>
                <td>
                <a href="/AdminCategory/DeleteCategory/@category.CategoryId" class="btn btn-danger">Sil</a>
                <a href="/AdminCategory/EditCategory/@category.CategoryId" class="btn btn-warning">Güncelle</a>
                </td>
            </tr>
        }

    </table>
    <br />
    <a href="/AdminCategory/AddCategory" class="btn btn-success">Kategori Ekle</a>
</div>

